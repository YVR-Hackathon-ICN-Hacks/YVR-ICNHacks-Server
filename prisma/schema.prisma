generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id              String  @id @map("_id")
  email           String  @unique
  verified_email  Boolean? @default(false)
  name            String
  given_name      String
  family_name     String
  picture         String
  locale          String
  hd              String?
  pushToken       String? @default("")
}

model Data {
  id          String  @id @map("_id")
  area_id     String
  timestamp   DateTime
  temperature Float?
  air_flow    Float?
  co2         Float?
}

model AreaCode{
  id         String  @id @default(auto()) @map("_id") @db.ObjectId
  areaCode   String
  dates      String[]
}

model AbnormalData {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  area_id     String
  priority    Int
  timestamp   DateTime
  temperature String
  air_flow    String
  co2         String
  solved      Boolean   @default(false)
}